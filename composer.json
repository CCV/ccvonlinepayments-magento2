{
  "name": "ccv/magento2",
  "description": "Official CCV Payment Services plugin for Magento 2",
  "keywords": ["plugin", "payments", "magento-2", "ccv"],
  "homepage": "https://github.com/CCV/ccvonlinepayments-magento2",
  "type": "magento2-module",
  "license": "MIT",
  "version": "1.8.0",
  "require": {
    "php": ">=8.1.0",
    "ccv/php-lib": "^2",
    "ccv/images": "^1.1",
    "magento/framework": "^102.0.0|^103.0.0",
    "magento/module-payment": "^100.3.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "bitexpert/phpstan-magento": "^0.42.0",
    "phpstan/extension-installer": "^1.4"
  },
  "autoload": {
    "files": [ "registration.php" ],
    "psr-4": {
      "CCVOnlinePayments\\Magento\\Controller\\": "Controller",
      "CCVOnlinePayments\\Magento\\": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "magento/composer-dependency-version-audit-plugin": false,
      "phpstan/extension-installer": true
    }
  }
}
